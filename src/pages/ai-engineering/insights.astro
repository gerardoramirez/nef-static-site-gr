---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';

const baseUrl = import.meta.env.BASE_URL;
---

<Layout>
  <Navigation />
  <div class="container">
    <header class="page-header">
      <a href={`${baseUrl}ai-engineering`} class="back-link">
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M19 12H5M12 19l-7-7 7-7"/>
        </svg>
        Back to AI Engineering
      </a>
      <h1>Insights</h1>
      <p class="subtitle">Reflections and observations from working with AI systems</p>
    </header>

    <div class="content-placeholder">
      <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <path d="M12 20h9"></path>
        <path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"></path>
      </svg>
      <p>Content coming soon. This section will share insights and lessons learned from AI engineering work.</p>
    </div>
  </div>
</Layout>

<style>
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem;
    min-height: calc(100vh - 200px);
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: #6b7280;
    text-decoration: none;
    font-size: 0.9rem;
    margin-bottom: 1rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: #3b82f6;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #111827;
    margin: 0 0 0.75rem;
  }

  .subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    margin: 0;
  }

  .content-placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: 4rem 2rem;
    background: #f9fafb;
    border: 2px dashed #e5e7eb;
    border-radius: 12px;
    color: #6b7280;
  }

  .content-placeholder svg {
    margin-bottom: 1.5rem;
    opacity: 0.5;
  }

  .content-placeholder p {
    max-width: 500px;
    line-height: 1.6;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .container {
      padding: 2rem 1rem;
    }

    h1 {
      font-size: 2rem;
    }

    .content-placeholder {
      padding: 3rem 1.5rem;
    }
  }
</style>
